<UserControl x:Class="HeatingOilTracker.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="White">
    <DockPanel Margin="20">
        <!-- Header -->
        <TextBlock DockPanel.Dock="Top"
                   Text="Dashboard"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#1e293b"
                   Margin="0,0,0,20"/>

        <!-- Alert Banner -->
        <Border DockPanel.Dock="Top"
                Background="#fef2f2"
                BorderBrush="#dc2626"
                BorderThickness="1"
                CornerRadius="6"
                Padding="15,10"
                Margin="0,0,0,20"
                Visibility="{Binding ShowAlert, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âš "
                           FontSize="18"
                           Foreground="#dc2626"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding AlertMessage}"
                           Foreground="#991b1b"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <Button Content="Order Now"
                        Style="{StaticResource DangerButtonStyle}"
                        Margin="20,0,0,0"
                        Padding="12,4"
                        Command="{Binding NavigateToSettingsCommand}"/>
            </StackPanel>
        </Border>

        <!-- Empty State -->
        <StackPanel DockPanel.Dock="Top"
                    Visibility="{Binding HasData, Converter={StaticResource InverseBoolToVisibility}}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,50">
            <TextBlock Text="No delivery data yet"
                       FontSize="18"
                       Foreground="#94a3b8"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <Button Content="Add Your First Delivery"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding NavigateToDeliveriesCommand}"
                    HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding HasData, Converter={StaticResource BoolToVisibility}}">
            <StackPanel>
                <!-- Top Cards Row -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tank Level Card -->
                    <Border Grid.Column="0"
                            Background="#f8fafc"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="TANK LEVEL"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="#64748b"
                                       Margin="0,0,0,15"/>

                            <!-- Tank Gauge Visualization -->
                            <Grid Height="120" Margin="0,0,0,15">
                                <Border Background="#e2e8f0"
                                        CornerRadius="6"
                                        Width="60"
                                        HorizontalAlignment="Center"/>
                                <Border Background="#2563eb"
                                        CornerRadius="6"
                                        Width="60"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Height="{Binding PercentFull, Converter={StaticResource PercentToHeight}, ConverterParameter=120}"/>
                                <!-- Tank outline -->
                                <Border BorderBrush="#94a3b8"
                                        BorderThickness="2"
                                        CornerRadius="6"
                                        Width="60"
                                        HorizontalAlignment="Center"/>
                            </Grid>

                            <!-- Tank Stats -->
                            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,5">
                                <Run Text="~" FontSize="14"/>
                                <Run Text="{Binding EstimatedGallons, StringFormat=F0}" FontSize="28" FontWeight="Bold" Foreground="#1e293b"/>
                                <Run Text=" gallons" FontSize="14" Foreground="#64748b"/>
                            </TextBlock>

                            <TextBlock Text="{Binding PercentFull, StringFormat='{}{0:F0}% full'}"
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       Foreground="#64748b"
                                       Margin="0,0,0,5"/>

                            <TextBlock Text="{Binding DaysRemainingDisplay, StringFormat='~{0} remaining'}"
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#16a34a"/>
                        </StackPanel>
                    </Border>

                    <!-- Quick Stats Card -->
                    <Border Grid.Column="2"
                            Background="#f8fafc"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                    Margin="0 0 20 0"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="QUICK STATS"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="#64748b"
                                       Margin="0,0,0,15"/>

                            <!-- Stat rows -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Burn Rate:" Foreground="#64748b"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding BurnRateDisplay}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="K-Factor:" Foreground="#64748b"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding KFactorDisplay}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Last Delivery:" Foreground="#64748b"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding LastDeliveryDateDisplay}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Days Since Fill:" Foreground="#64748b"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding DaysSinceLastDelivery, StringFormat='{}{0} days'}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tank Capacity:" Foreground="#64748b"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding TankCapacity, StringFormat='{}{0:F0} gallons'}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Separator Background="#e2e8f0" Margin="0,5,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Predicted Refill:" Foreground="#64748b"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding PredictedRefillDateText}"
                                           FontWeight="Bold"
                                           Foreground="#2563eb"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <TextBlock Text="Always verify by checking your tank gauge."
                                       FontSize="11"
                                       FontStyle="Italic"
                                       Foreground="#94a3b8"
                                       TextWrapping="Wrap"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Deliveries Section -->
                <Border Background="#f8fafc"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="0 0 20 0"
                        Padding="20">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,15">
                            <TextBlock Text="RECENT DELIVERIES"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="#64748b"/>
                            <Button Content="View All"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="10,4"
                                    HorizontalAlignment="Right"
                                    DockPanel.Dock="Right"
                                    Command="{Binding NavigateToDeliveriesCommand}"/>
                        </DockPanel>

                        <ItemsControl ItemsSource="{Binding RecentDeliveries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            BorderBrush="{StaticResource BorderColor}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="15,10"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Date, StringFormat='MMM d, yyyy'}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Gallons, StringFormat='{}{0:F1} gallons'}"
                                                       Foreground="#64748b"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2"
                                                       VerticalAlignment="Center"
                                                       Foreground="#16a34a"
                                                       FontWeight="SemiBold">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource TotalCostConverter}">
                                                        <Binding Path="Gallons"/>
                                                        <Binding Path="PricePerGallon"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
