<Window x:Class="HeatingOilTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        Title="Heating Oil Tracker"
        Icon="pack://application:,,,/Assets/app.ico"
        Height="660" Width="1080"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackground}">
            <DockPanel>
                <!-- App Title -->
                <TextBlock DockPanel.Dock="Top"
                           Text="Oil Tracker"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="15,20,15,25"
                           HorizontalAlignment="Center"/>

                <!-- Navigation -->
                <StackPanel DockPanel.Dock="Top" Margin="8,0">
                    <Button Content="Dashboard"
                            Style="{StaticResource SidebarButtonStyle}"
                            Margin="0,2"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="DashboardView"/>
                    <Button Content="Deliveries"
                            Style="{StaticResource SidebarButtonStyle}"
                            Margin="0,2"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="DeliveriesView"/>
                    <Button Content="Charts"
                            Style="{StaticResource SidebarButtonStyle}"
                            Margin="0,2"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ChartsView"/>
                    <Button Content="Weather"
                            Style="{StaticResource SidebarButtonStyle}"
                            Margin="0,2"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="WeatherView"/>
                    <Button Content="Reports"
                            Style="{StaticResource SidebarButtonStyle}"
                            Margin="0,2"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ReportsView"/>
                    <Button Content="Settings"
                            Style="{StaticResource SidebarButtonStyle}"
                            Margin="0,2"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="SettingsView"/>
                    <Button Content="Reference"
                            Style="{StaticResource SidebarButtonStyle}"
                            Margin="0,2"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ReferenceView"/>
                </StackPanel>

                <!-- Spacer + Exit -->
                <StackPanel DockPanel.Dock="Bottom" Margin="8,0,8,15">
                    <Separator Background="#334155" Margin="0,0,0,10"/>
                    <Button Content="Exit"
                            Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding ExitCommand}"/>
                </StackPanel>

                <!-- Empty fill -->
                <Border/>
            </DockPanel>
        </Border>

        <!-- Content Region -->
        <ContentControl Grid.Column="1"
                        prism:RegionManager.RegionName="ContentRegion"/>
    </Grid>
</Window>
