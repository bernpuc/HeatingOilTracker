<UserControl x:Class="HeatingOilTracker.Views.WeatherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="White">
    <DockPanel Margin="20">
        <!-- Header -->
        <TextBlock DockPanel.Dock="Top"
                   Text="Temperature History"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#1e293b"
                   Margin="0,0,0,15"/>

        <!-- Empty State -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding HasData, Converter={StaticResource InverseBoolToVisibility}}">
            <TextBlock Text="No weather data available."
                       FontSize="16" Foreground="#94a3b8"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Configure your location in Settings and fetch weather data."
                       FontSize="14" Foreground="#94a3b8"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Visibility="{Binding HasData, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Range Selector -->
            <Border Grid.Row="0"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15"
                    Margin="0,0,20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Preset Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Range:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="#334155"
                                   Margin="0,0,15,0"/>
                        <Button Content="1W"
                                Command="{Binding Select1WCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="12,6"
                                Margin="0,0,5,0"/>
                        <Button Content="1M"
                                Command="{Binding Select1MCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="12,6"
                                Margin="0,0,5,0"/>
                        <Button Content="3M"
                                Command="{Binding Select3MCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="12,6"
                                Margin="0,0,5,0"/>
                        <Button Content="1Y"
                                Command="{Binding Select1YCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="12,6"
                                Margin="0,0,5,0"/>
                        <Button Content="All"
                                Command="{Binding SelectAllCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="12,6"/>
                    </StackPanel>

                    <!-- Separator -->
                    <Border Grid.Column="1"
                            Width="1"
                            Background="{StaticResource BorderColor}"
                            Margin="20,0"/>

                    <!-- Date Range Picker -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Custom Range:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="#334155"
                                   Margin="0,0,15,0"/>
                        <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}"
                                    Width="130"
                                    VerticalAlignment="Center"/>
                        <TextBlock Text="to"
                                   VerticalAlignment="Center"
                                   Foreground="#64748b"
                                   Margin="10,0"/>
                        <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                    Width="130"
                                    VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Info -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="{Binding DataPointsInfo}"
                           Foreground="#64748b"
                           FontSize="12"
                           Margin="0,0,20,0"/>
                <TextBlock Text="{Binding AggregationInfo}"
                           Foreground="#94a3b8"
                           FontSize="12"
                           FontStyle="Italic"/>
            </StackPanel>

            <!-- Temperature Chart -->
            <Border Grid.Row="2"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="0,0,20,0"
                    Padding="10">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Temperature"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="#334155"/>
                        <!-- Legend -->
                        <StackPanel Orientation="Horizontal" Margin="30,0,0,0" VerticalAlignment="Center">
                            <Border Width="20" Height="3" Background="#ef4444" CornerRadius="1" Margin="0,0,5,0"/>
                            <TextBlock Text="High" Foreground="#64748b" FontSize="11" Margin="0,0,15,0"/>
                            <Border Width="20" Height="3" Background="#3b82f6" CornerRadius="1" Margin="0,0,5,0"/>
                            <TextBlock Text="Average" Foreground="#64748b" FontSize="11" Margin="0,0,15,0"/>
                            <Border Width="20" Height="3" Background="#22c55e" CornerRadius="1" Margin="0,0,5,0"/>
                            <TextBlock Text="Low" Foreground="#64748b" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                    <Grid>
                        <lvc:CartesianChart x:Name="TemperatureChart"
                                            Series="{Binding TemperatureSeries}"
                                            XAxes="{Binding TemperatureXAxes}"
                                            YAxes="{Binding TemperatureYAxes}"
                                            ZoomMode="X"
                                            TooltipPosition="Hidden"/>
                        <Border x:Name="TemperatureTooltip"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                IsHitTestVisible="False"
                                Visibility="Collapsed"
                                Background="#E53b82f6"
                                CornerRadius="4"
                                Padding="10,6"
                                Margin="0,8,0,0">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="TemperatureTooltipTransform"/>
                            </Border.RenderTransform>
                            <TextBlock x:Name="TemperatureTooltipText"
                                       Foreground="White"
                                       FontSize="12"/>
                        </Border>
                    </Grid>
                </DockPanel>
            </Border>

            <!-- Footer Info -->
            <TextBlock Grid.Row="3"
                       Text="Tip: Use mouse wheel to zoom, drag to pan. Temperature data from Open-Meteo API."
                       Foreground="#94a3b8"
                       FontSize="11"
                       Margin="0,10,0,0"/>
        </Grid>
    </DockPanel>
</UserControl>
